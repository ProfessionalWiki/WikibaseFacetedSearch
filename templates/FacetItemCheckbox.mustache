{{!
	Codex - Checkbox component
	@see https://doc.wikimedia.org/codex/v1.14.0/components/demos/checkbox.html#markup-structure
}}
<div class="wikibase-faceted-search__facet-item wikibase-faceted-search__facet-item-checkbox cdx-checkbox">
	<div class="cdx-checkbox__wrapper">
		<input
			id="{{id}}"
			class="cdx-checkbox__input"
			type="checkbox"
			{{#selected}}checked{{/selected}}
		/>
		<span class="cdx-checkbox__icon"></span>
		<div class="cdx-checkbox__label cdx-label">
		<label for="{{id}}" class="cdx-label__label">
			{{! Change to <div> tag instead of <span> tag for valid HTML }}
			<span class="cdx-label__label__text">{{>FacetItemLabel}}</span>
		</label>
		</div>
	</div>
</div>